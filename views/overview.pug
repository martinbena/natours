extends base

block content 
    main.main 
        div.card-container
            if (tours.length === 0)
                p.big-fucking-text You have 0 booked tours
            each tour in tours
                div.card
                    div(class="card__header")
                        div(class="card__picture")
                            div(class="card__picture-overlay") &nbsp;
                            img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`, class="card__picture-img")
                        h3.heading-tertirary
                            span= tour.name
                    div(class="card__details")
                        h4(class="card__sub-heading")=`${tour.difficulty} ${tour.duration}-day tour`
                        p(class="card__text")= tour.summary
                        div(class="card__data")
                            svg(class="card__icon")
                                use(xlink:href="/img/icons.svg#icon-map-pin")
                            span= tour.startLocation.description
                        div(class="card__data")
                            svg(class="card__icon")
                                use(xlink:href="/img/icons.svg#icon-calendar")
                            span= tour.startDates[0].toLocaleString("en-us", {month: "long", year: "numeric"})
                        div(class="card__data")
                            svg(class="card__icon")
                                use(xlink:href="/img/icons.svg#icon-flag")
                            span= `${tour.locations.length} stops`
                        div(class="card__data")
                            svg(class="card__icon")
                                use(xlink:href="/img/icons.svg#icon-user")
                            span= `${tour.maxGroupSize} people`
                    div(class="card__footer")
                        p
                            span(class="card__footer-value")= `$${tour.price}`
                            | 
                            span(class="card__footer-text") per person
                        p(class="card__ratings")
                            span(class="card__footer-value")= tour.ratingsAverage
                            | 
                            span(class="card__footer-text")=`rating (${tour.ratingsQuantity})`
                        a.btn.btn--green.btn--small(href=`/tours/${tour.slug}`) Details